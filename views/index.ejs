   <!--events-->
   <div class="section" id="section6">
      <h1>Events</h1>
      <div class="flexParent">
         <div class="col-sm-6">
            <h2>Upcoming Events</h2>
            <div class="eventTable flexParent" data-bind="foreach: $root.events">
               <div class="col-sm-12">
                  <h4 style="display: inline">
                     <span data-bind="text: data.eventTitle"></span> 
                  </h4>
                     <i class="material-icons editBtn editBtnEvent" data-bind="attr:{id: key}, click: function(data,event){$root.selectEvent(data,event); $root.clickEdit(data,event);}">edit</i>
                  
               </div>
               <div class="col-sm-3 eventDate" data-bind="text: $root.parseDate(data.eventDate);"></div>
               <div class="col-sm-3" data-bind="text: $root.parseTime(data.eventTimeStart);"></div>
               <div class="col-sm-6" data-bind="text: data.eventLocation"></div>
               <div class="col-sm-12">
                  <span class="addtocalendar atc-style-blue">
                     <var class="atc_event">
                        <var class="atc_date_start" data-bind="text: data.eventDate + ' ' + data.eventTimeStart">2017-05-04 12:00:00</var> 
                        <var class="atc_date_end" data-bind="text: data.eventDate + ' ' + data.eventTimeEnd">2017-05-04 18:00:00</var>
                        <var class="atc_timezone">America/Los_Angeles</var> 
                        <var class="atc_title" data-bind="text: data.eventTitle">Title</var> 
                        <var class="atc_description" data-bind="text: data.eventDescription">Description</var> 
                        <var class="atc_location" data-bind="text: data.eventLocation">Location</var> 
                        <var class="atc_organizer"></var> 
                        <var class="atc_organizer_email"></var>
                     </var>
                  </span>
               </div>
               <div class="borderTop col-sm-12">
                  <hr style="border-color: #054663;">
               </div>
            </div>
         </div>
         <div class="col-sm-6">
            <h2>Past Events</h2>
            <h4>Secretary Alicia Engellenner's Retirement</h4>
            <p>ALICIA ENGELLENNER<br>
            SECRETARY<br>
            FRESNO COUNTY PEACE OFFICER’S MEMORIAL FOUNDATION<br>
            <br>
            October 2005 – August 2016<br>
            <br>
